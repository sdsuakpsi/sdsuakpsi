<header>
  <div class="cover">
    <h2>Rush Sign-In Database</h2>
  </div>
</header>
<%= form_tag(signins_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Sign-Ins", :size => 40 %>
  <% submit_tag "Search" %>
<% end %>
<% if @signin.present? %>
  <div id="tableWrapper">
    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Major</th>
          <th>Email</th>
          <th>Referred By</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @signin.each do |data| %>
          <tr>
            <td><%= data.first_name %></td>
            <td><%= data.last_name %></td>
            <td><%= data.major %></td>
            <td><%= data.email %></td>
            <td><%= data.referred_by %></td>
            <td><%= button_to "More Info", signin_path(:id => data.id), :method => :get %></td>
            <td><%= button_to "Update Attendance", edit_signin_path(:id => data.id), :method => :get %></td>
            <td><%= button_to "Delete", signin_path(:id => data.id), :method => :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <div>
<% else %>
  <p style="text-align: center;">There are no rush sign-ins with the name <%= params[:search] %>.</p>
<% end %>
