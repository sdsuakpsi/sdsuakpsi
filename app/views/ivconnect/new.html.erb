<div id="membershipWrapper">
  <%= form_for @business, { :url => ivconnect_index_path } do |f| %>
    <%= f.label :logo_image_id, "Logo" %>
    <%= f.text_field :logo_image_id %>
    <%= f.label :profile_image_id, "Profile Image" %>
    <%= f.text_field :profile_image_id %>
    <%= f.label :menu_image_id, "Menu Image" %>
    <%= f.text_field :menu_image_id %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <%= f.label :address, "Address" %>
    <%= f.text_field :address %>
    <%= f.label :phone, "Phone" %>
    <%= f.text_field :phone %>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
    <%= f.label :service, "Type (Dining, Service, Lifestyle)" %>
    <%= f.text_field :service %>
    <%= f.label :category, "Category (ie. Asian Fusion)" %>
    <%= f.text_field :category %>
    <%= f.label :monday_hours, "Monday Hours" %>
    <%= f.text_field :monday_hours %>
    <%= f.label :tuesday_hours, "Tuesday Hours" %>
    <%= f.text_field :tuesday_hours %>
    <%= f.label :wednesday_hours, "Wednesday Hours" %>
    <%= f.text_field :wednesday_hours %>
    <%= f.label :thursday_hours, "Thursday Hours" %>
    <%= f.text_field :thursday_hours %>
    <%= f.label :friday_hours, "Friday Hours" %>
    <%= f.text_field :friday_hours %>
    <%= f.label :saturday_hours, "Saturday Hours" %>
    <%= f.text_field :saturday_hours %>
    <%= f.label :sunday_hours, "Sunday Hours" %>
    <%= f.text_field :sunday_hours %>
    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>
    <%= f.label :one_time_deal, "One Time Deal" %>
    <%= f.text_area :one_time_deal %>
    <%= f.label :recurring_deal, "Recurring Deal" %>
    <%= f.text_area :recurring_deal %>
    <%= f.submit "Submit" %>
  <% end %>
</div>
